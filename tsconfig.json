{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "jsx": "react",
        "lib": [
            "DOM"
        ],
        "module": "commonjs",
        "outDir": "./dist/",
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es2020",
        "types": [
            "node",
            "webpack-env"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "./src/server"
    ],
    "extends": "@tsconfig/node12/tsconfig.json",
    "include": [
        "./src/client/*",
        "./src/client/types/**/*.d.ts",
        "src/client/types/user.ts",
        "src/client/types/events.ts",
        "src/client/types/auth.ts",
        "src/client/types/api.ts",
        "src/server/**/*.d.ts"
    ]
}
